let pool=[], current=null, dir="en";

function pickNext(){
  if(pool.length===0){
    document.getElementById("q").innerText="ğŸ‰ ë!";
    return;
  }
  const i=Math.floor(Math.random()*pool.length);
  const p=pool.splice(i,1)[0];
  dir=Math.random()<0.5?"en":"ko";
  current=p;
  document.getElementById("q").innerText=
    dir==="en" ? "ë‹¨ì–´: "+p[0] : "ëœ»: "+p[1];
  document.getElementById("a").value="";
  document.getElementById("r").innerText="";
}

function check(){
  if(!current) return;
  const ans = dir==="en"?current[1]:current[0];
  const user=document.getElementById("a").value.trim();
  document.getElementById("r").innerText=
    user===ans ? "â­• ì •ë‹µ" : "âŒ ì •ë‹µ: "+ans;
}

function nextQ(){ pickNext(); }

document.getElementById("a").addEventListener("keydown",e=>{
  if(e.key==="Enter") check();
});

window.onload=()=>{
  pool=[...DATA];
  pickNext();
};
